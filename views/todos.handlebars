<h2>Welcome, {{username}}!</h2>
<h3>My To-Do List</h3>
<form action="/todos" method="POST" class="mb-4">
    <div class="input-group">
        <input type="text" class="form-control" name="todo" placeholder="Add a new todo" required>
        <button class="btn btn-primary" type="submit">Add</button>
    </div>
</form>

<div class="row">
    {{#each todos}}
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title {{#if this.completed}}text-muted{{/if}}">{{this.text}}</h5>
                    <form action="/todos/{{this.id}}/toggle" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm {{#if this.completed}}btn-success{{else}}btn-secondary{{/if}}">
                            {{#if this.completed}}Completed{{else}}Mark as Completed{{/if}}
                        </button>
                    </form>
                    <a href="/todos/{{this.id}}/edit" class="btn btn-sm btn-primary">Edit</a>
                    <form action="/todos/{{this.id}}/delete" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
</div>